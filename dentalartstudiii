    <script>
        function toggleChat() {
            const chat = document.getElementById('chatbot');
            chat.style.display = (chat.style.display === 'flex') ? 'none' : 'flex';
        }

        function botReply(type) {
            const box = document.getElementById('chat-box');
            let text = "";

            if(type === 'costo') {
                text = "La consulta de valoración tiene un costo de **$200 pesos**. Lo mejor es que si decides quedarte con nosotros, **¡se te descuentan de tu tratamiento!**";
            } else {
                text = "Para cualquier otra duda, escríbenos directamente por WhatsApp. ¡Te atenderemos de inmediato!";
                setTimeout(() => window.open("https://wa.me/525575335931"), 1500);
            }

            const div = document.createElement('div');
            div.className = "bot-msg";
            div.innerText = text;
            box.appendChild(div);
            box.scrollTop = box.scrollHeight;
        }
    </script>

