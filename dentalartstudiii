    <script>
        function toggleChat() {
            const chat = document.getElementById('chat-widget');
            chat.style.display = (chat.style.display === 'flex') ? 'none' : 'flex';
        }

        function chatAnswer(tipo) {
            const msgContainer = document.getElementById('chat-messages');
            let botMsg = "";

            if(tipo === 'costo') {
                botMsg = "La consulta de valoración tiene un costo de **$2,000 pesos**. Lo mejor es que si decides realizarte tu tratamiento con nosotros, **ese monto se te descuenta del total**. ¡Es una inversión en tu salud!";
            } else if (tipo === 'tecnologia') {
                botMsg = "Contamos con tecnología Láser de vanguardia para que tus procedimientos sean rápidos y sin dolor.";
            } else if (tipo === 'whatsapp') {
                botMsg = "Para dudas más específicas, por favor escríbenos directamente. ¡Te atenderemos de inmediato!";
                setTimeout(() => {
                    window.open("https://wa.me/525575335931", "_blank");
                }, 1500);
            }

            const newMsg = document.createElement('div');
            newMsg.className = "msg bot";
            newMsg.innerHTML = botMsg;
            msgContainer.appendChild(newMsg);
            msgContainer.scrollTop = msgContainer.scrollHeight;
        }
    </script>

